<modelComponent type="atmosphere" embedded="true" xmlns="http://www.metaforclimate.eu/cim/1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 Z:\CIM\XSDs\software.xsd">
	<composition>
		<coupling complete="false" type="argument-passing">
			<description>Initialisation File</description>
			<lag units="seconds" xsi:type="Timing">
				<rate>0</rate>
			</lag>
			<rate units="seconds" xsi:type="Timing">
				<rate>0</rate>
			</rate>
			<!-- source needs to point to the initialisation file "xdhwda.dax2b10" in the data section. I assume some xlink/xpointer will be used at this point.-->
			<source xlink:href="Data/Initialisation_File"/>
			<!--  I assume this should be a xlink back to the Model component itself? -->
			<target xlink:href="HiGEM_Atmos.xml"/>
		</coupling>
		<description>HiGEM Atmosphere model with embedded convection scheme, cloud scheme, radiation scheme, boundary layer scheme....</description>
	</composition>
	<childComponent embedded="true">
		<!-- Need an xlink to the particular childcomponent document here -->
		<description>Convection Scheme</description>
		<name>AtmosConvection</name>
		<!-- No need for numericalProperties and scientificProperties here-->
		<numericalProperties/>
		<scientificProperties/>
	</childComponent>
	<childComponent embedded="true">
		<!-- Need an xlink to the particular childcomponent document here -->
		<description>Radiation Scheme</description>
		<name>AtmosRadiation</name>
		<!-- No need for numericalProperties and scientificProperties here-->
		<numericalProperties/>
		<scientificProperties/>
	</childComponent>
	<childComponent embedded="true">
		<!-- Need an xlink to the particular childcomponent document here -->
		<description>Cloud Scheme</description>
		<name>Clouds</name>
		<!-- No need for numericalProperties and scientificProperties here -->
		<numericalProperties/>
		<scientificProperties/>
	</childComponent>
	<childComponent embedded="true">
		<!-- Need an xlink to the particular childcomponent document here -->
		<description>Aerosol Scheme</description>
		<!-- Is aerosol going to be considered a seperate submodel or should it be under atmospheric chemistry -->
		<name>Aerosol</name>
		<!-- No need for numericalProperties and scientificProperties here -->
		<numericalProperties/>
		<scientificProperties/>
	</childComponent>
	<description>
		Atmosphere component of  HiGEM (vn 1.2)
	</description>
	<name>
		HiGEM_Atmos
	</name>
	<numericalProperties>
		<!-- I'm unclear here as to what 'type' and 'represented' actually mean? -->
		<numericalProperty type="characteristic" represented="true">
			<name>AtmosAdvection</name>
			<value>Semi-Langrangian</value>
			<description>Davies et al., 2005; </description>
		</numericalProperty>
		<numericalProperty type="characteristic" represented="true">
			<name>Tracer Transport</name>
			<value>Conservative Monotone</value>
		</numericalProperty>
		<numericalProperty type="characteristic" represented="true">
			<name>Time Integration</name>
			<value>Semi-implicit</value>
		</numericalProperty>
		<numericalProperty type="characteristic" represented="true">
			<name>Dynamical core</name>
			<value>Non-hydrostatic</value>
		</numericalProperty>
		<numericalProperty type="characteristic" represented="true">
			<name>MoistureDiffusion</name>
			<value>Targeted first-order local diffusion</value>
			<description>
				Targeted moisture diffusion scheme implemented to prevent numerical instabilities known as 'grid-point storms'
			</description>
		</numericalProperty>
	</numericalProperties>
	<scientificProperties>
		<scientificProperty type="prognostic">
			<name>Temperature</name>
			<description>3D temperature of the model atmosphere</description>
			<grid xlink:href="Xlink to grid structure"/>
		</scientificProperty>
		<scientificProperty type="prognostic">
			<name>U-velocity</name>
			<description>3D zonal wind field</description>
			<grid xlink:href="Xlink to grid structure"/>
		</scientificProperty>
		<scientificProperty type="prognostic">
			<name>V-velocity</name>
			<description>3D meridional wind field</description>
			<grid xlink:href="Xlink to grid structure"/>
		</scientificProperty>
		<scientificProperty type="prognostic">
			<name>W-velocity</name>
			<description>3D vertical wind field</description>
			<grid xlink:href="Xlink to grid structure"/>
		</scientificProperty>
		<scientificProperty type="prognostic">
			<name>Q</name>
			<description>3D moisture field</description>
			<grid xlink:href="Xlink to grid structure"/>
		</scientificProperty>
	</scientificProperties>
	<timing units="minutes" xsi:type="Timing">
		<!-- this is the atmospheric model timestep -->
		<rate>20</rate>
	</timing>
	<creationDate>
		<!-- Not sure which date creationDate actually refers to -->
		2009-04-01T13:47:00
	</creationDate>
	<documentID>
		<!-- To be decided how this is managed -->
	</documentID>
</modelComponent>
