<?xml version="1.0" encoding="UTF-8"?>
<!-- This XML document is an instance of the atmospheric convection component of the UM HiGEM experiment. It does not contain child components, instead segregating the description of deep and shallow convection into different numericalProperties.-->
<modelComponent type="atmosphere" embedded="true" xmlns="http://www.metaforclimate.eu/cim/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.metaforclimate.eu/cim/1.1 ..\..\..\..\XSDs\software.xsd">
	<description>Atmospheric Convection component of the HiGEM model. The convection scheme is based on the mass flux scheme of Gregory and Rowntree (1990). Deep and shallow convection are diagnosed separately with different thermodynamic closures specified. Current scheme was previously known as CMODS.</description>
	<name>HiGEM_Atmos_AtmosConvection</name>
	<numericalProperties xsi:type="NumericalProperties">
		<numericalProperty type="coefficient" represented="true" xsi:type="NumericalProperty">
			<description>Number of calls per timestep</description>
			<name>#Not_needed# Or do we need CV to describe description</name>
			<!-- <value> 2 </value> -->
		</numericalProperty>
		<!-- ** Convective momentum transport section ** -->
		<numericalProperty type="method" represented="true" xsi:type="NumericalProperty">
			<description> Convective (vertical) momentum transport scheme type. Note that scheme is used for both shallow and deep convection</description>
			<name>VerticalMomentumTransportType</name>
			<!-- <value>Flux-gradient relationship</value> -->
		</numericalProperty>
		<!-- ** Deep Convection section **-->
		<numericalProperty type="method" represented="true" xsi:type="NumericalProperty">
			<componentProperty xsi:type="ComponentProperty">
				<description> Type of deep convection scheme</description>
				<name>DeepConvectionType</name>
				<!-- <value>Mass flux detemined by CAPE </value> -->
			</componentProperty>
			<componentProperty xsi:type="ComponentProperty">
				<citation>
					<!-- Put in Gregory and Rowntree (1990) in correct citation format -->
				</citation>
				<description> Name of deep convection scheme</description>
				<name>DeepConvectionScheme</name>
				<!-- <value> GregoryRowntree1990 (add to CV?) </value> -->
			</componentProperty>
			<componentProperty xsi:type="ComponentProperty">
				<citation>
					<!-- Put in Fritsch and Chappell (1980) in correct format here -->
				</citation>
				<description>Name of CAPE closure scheme</description>
				<name>CapeClosureScheme - CV needed?</name>
				<!-- <value> FritschChappell1980 - Add to CV? </value> -->
			</componentProperty>
			<componentProperty xsi:type="ComponentProperty">
				<!-- This needs to be in time format -->
				<description>Timescale for CAPE closure scheme</description>
				<name>CAPEClosureTimescale</name>
				<!-- <value> 3600 </value> -->
				<!-- <units> (seconds) needed here -->
			</componentProperty>
			<componentProperty xsi:type="ComponentProperty">
				<componentProperty>
					<description>Anvil Factor for applying depth criteria for anvil clouds</description>
					<name>CV needed for description?</name>
					<!-- <value> 3.0 </value> -->
				</componentProperty>
				<componentProperty>
					<description>Tower Factor for applying depth criteria for anvil clouds</description>
					<name>CV needed for description?</name>
					<!-- <value> 0.25 </value> -->
				</componentProperty>
				<citation>
					<!-- Put Gregory (1999) in correct citation format here -->
				</citation>
				<description>Radiative representation of anvils - Vertically varying convective cloud amount specified</description>
				<name>#Not needed here#</name>
			</componentProperty>
			<componentProperty xsi:type="ComponentProperty">
				<componentProperty xsi:type="ComponentProperty">
					<description> MPARWTR is the reservoir retained in the cloud in a layer, after precipitation</description>
					<name>MPARWTR - add to CV?</name>
					<!-- <value>1.0E-03</value> -->
					<!-- would also need 'units' here, in this case kg/kg -->
				</componentProperty>
				<componentProperty xsi:type="ComponentProperty">
					<description> Updraught factor value for reducing cloud water</description>
					<name>UpdraughtFactor - add to CV?</name>
					<!-- <value> 0.12 </value> -->
				</componentProperty>
				<description>Excluding convective precipitation from the water path means that the radiation scheme does not 'see' the convective rain and snow</description>
				<name>#Not needed here#</name>
			</componentProperty>
			<name>DeepConvection</name>
		</numericalProperty>
		<!-- Shallow Convection section -->
		<numericalProperty type="method" represented="true" xsi:type="NumericalProperty">
			<componentProperty>
				<citation>
					<!-- Grant 2001 to be put in correct citation format -->
				</citation>
				<description>Name of CAPE closure scheme</description>
				<name>ShallowCAPEClosureScheme - add to CV?</name>
				<!-- <value> Grant2001 </value> -->
			</componentProperty>
			<componentProperty xsi:type="ComponentProperty">
				<citation> <!-- Put Grant and Brown (1999) in correct format here --> </citation>
				<description>Shallow Convection Entrainment Scheme</description>
				<name>ShallowConvEntrainmentScheme - add to CV?</name>
				<!-- <value>GrantBrown1999</value> -->
			</componentProperty>
			<name>ShallowConvection</name>
		</numericalProperty>
	</numericalProperties>
	<scientificProperties/>
	<timing units="minutes" xsi:type="Timing">
		<!-- This is actually determined by setting 'number of calls per timestep = 2', so I have added this as a numericalproperty. Should not need both but am adding this here until clarification -->
		<rate>10</rate>
	</timing>
	<creationDate>
		<!-- Not sure which date creationDate actually refers to -->
		2009-04-01T13:47:00
	 </creationDate>
	<documentID/>
	<!-- <parent xlink:href="HiGEM_Atmos" /> -->
</modelComponent>
